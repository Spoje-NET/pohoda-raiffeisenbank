{
    "$schema": "https://raw.githubusercontent.com/VitexSoftware/php-vitexsoftware-multiflexi-core/refs/heads/main/multiflexi.app.schema.json",
    "schemaVersion": "3.0.0",
    "uuid": "47bd8f47-8372-4192-a5b5-72a2bb3987bc",
    "name": {
        "en": "Raiffeisenbank Transaction Report for Pohoda",
        "cs": "Raiffeisenbank Transaction Report for Pohoda"
    },
    "description": {
        "en": "Generate detailed transaction reports from Raiffeisenbank statements for Pohoda",
        "cs": "Generate detailed transakce reports from Raiffeisenbank statements for Pohoda"
    },
    "tags": [
        "Raiffeisen",
        "Bank",
        "Transaction",
        "Report",
        "Pohoda"
    ],
    "homepage": "https://github.com/Spoje-NET/pohoda-raiffeisenbank",
    "executable": "pohoda-bank-transaction-report",
    "environment": {
        "ACCOUNT_NUMBER": {
            "type": "text",
            "description": {
                "en": "Bank Account Number",
                "cs": "Bank Account Number"
            },
            "defval": "",
            "required": true,
            "category": "Other"
        },
        "REPORT_SCOPE": {
            "type": "text",
            "description": {
                "en": "Time scope of transactions included in the report",
                "cs": "Time scope of transakces included in the report"
            },
            "defval": "auto",
            "required": true,
            "category": "Other"
        },
        "ACCOUNT_CURRENCY": {
            "type": "text",
            "description": {
                "en": "For multicurrency accounts please specify one",
                "cs": "For multicurrency accounts please specify one"
            },
            "defval": "CZK",
            "required": false,
            "category": "Other"
        },
        "POHODA_ICO": {
            "type": "text",
            "description": {
                "en": "Pohoda ICO",
                "cs": "Pohoda ICO"
            },
            "defval": "12345678",
            "required": true,
            "category": "API"
        },
        "POHODA_URL": {
            "type": "text",
            "description": {
                "en": "Pohoda URL",
                "cs": "Pohoda URL"
            },
            "defval": "http://127.0.0.1:10010",
            "required": true,
            "category": "API"
        },
        "POHODA_USERNAME": {
            "type": "text",
            "description": {
                "en": "Pohoda Username",
                "cs": "Pohoda Username"
            },
            "defval": "Admin",
            "required": true,
            "category": "API"
        },
        "POHODA_PASSWORD": {
            "type": "password",
            "description": {
                "en": "Pohoda Password",
                "cs": "Pohoda Password"
            },
            "defval": "xxxxxxxx",
            "required": true,
            "category": "API"
        },
        "POHODA_TIMEOUT": {
            "type": "number",
            "description": {
                "en": "Pohoda Timeout",
                "cs": "Pohoda Timeout"
            },
            "defval": 60,
            "required": true,
            "category": "API"
        },
        "POHODA_COMPRESS": {
            "type": "bool",
            "description": {
                "en": "Pohoda Compress",
                "cs": "Pohoda Compress"
            },
            "defval": false,
            "required": true,
            "category": "API"
        },
        "POHODA_DEBUG": {
            "type": "bool",
            "description": {
                "en": "Pohoda Debug",
                "cs": "Pohoda Debug"
            },
            "defval": true,
            "required": true,
            "category": "API"
        },
        "POHODA_BANK_IDS": {
            "type": "text",
            "description": {
                "en": "Pohoda Bank IDs",
                "cs": "Pohoda Bank IDs"
            },
            "defval": "KB",
            "required": true,
            "category": "API"
        },
        "REPORT_SAVE_DIR": {
            "type": "text",
            "description": {
                "en": "Directory to save generated reports (PDF/CSV)",
                "cs": "Directory to save generated reports (PDF/CSV)"
            },
            "defval": "",
            "required": false,
            "category": "Other"
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": {
                "en": "Write log messages using",
                "cs": "Write log messages using"
            },
            "defval": "console|syslog",
            "required": false,
            "category": "Behavior"
        },
        "RESULT_FILE": {
            "type": "string",
            "description": {
                "en": "write output json data to",
                "cs": "write output json data to"
            },
            "defval": "bank_transaction_report_{ACCOUNT_NUMBER}.json",
            "required": false,
            "category": "Other"
        },
    },
    "artifacts": [{
            "name": {
                "cs": "Report transakcí",
                "en": "Transaction report"
            },
            "type": "file",
            "path": "bank_transaction_report_{\\d+}.json$",
            "description": {
                "en": "Destiled bank statement",
                "cs": "Destilovaný bankovní výpis"
            }
    }]
}
